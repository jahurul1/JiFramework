# JiFramework Environment Configuration Example
# Rename this file to .env and update with your settings

# Application Settings
APP_NAME=JiFramework
APP_ENV=development # Options: development, production, testing
APP_DEBUG=true
APP_URL=http://localhost

# Database Configuration
DB_DRIVER=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=jiframework
DB_USERNAME=root
DB_PASSWORD=

# Database for testing (used by the test runner)
TEST_DB_DRIVER=mysql
TEST_DB_HOST=localhost
TEST_DB_PORT=3306
TEST_DB_DATABASE=jiframework_test
TEST_DB_USERNAME=root
TEST_DB_PASSWORD=

# Cache Configuration
CACHE_DRIVER=file # Options: file, redis, memcached
CACHE_PREFIX=ji_
CACHE_LIFETIME=3600

# Session Configuration
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=false

# Mail Configuration
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=hello@example.com
MAIL_FROM_NAME="${APP_NAME}"

# Rate Limiting 
RATE_LIMIT_ENABLED=true
RATE_LIMIT_ATTEMPTS=60
RATE_LIMIT_TIME_PERIOD=60 